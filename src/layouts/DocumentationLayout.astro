---
import Sidebar from '../components/Sidebar.astro'
import Toc from '../components/Toc.astro'
import Footer from '../components/layout/Footer.astro'
import Header from '../components/layout/Header.astro'
import type { TocItem } from '../lib/toc'
import MainLayout from './MainLayout.astro'

import fs from 'fs'
import path from 'path'

const siteConfigPath = path.resolve('./src/config/site.json')
const siteConfig = JSON.parse(fs.readFileSync(siteConfigPath, 'utf-8'))

interface Props {
  toc: TocItem[]
  title: string
}

const { toc, title } = Astro.props
---

<MainLayout title={title}>
  <Header />
  <div class='grid grid-cols-12 lg:px-4'>
    <Sidebar anchors={siteConfig.anchors} navigation={siteConfig.navigation} />
    <main class='col-span-12 xl:col-span-9 px-4 lg:px-10 mt-32 lg:pl-64'>
      <div class='min-h-screen'>
        <slot />
      </div>
      <Footer />
    </main>
    <Toc toc={toc} />
  </div>
</MainLayout>

<script src='../scripts/toc.js'></script>
